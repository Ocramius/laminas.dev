{
    "name": "laminas/laminas-bot",
    "type": "project",
    "description": "Bot providing webhooks and chat integration to the Laminas Project",
    "keywords": [
        "skeleton",
        "middleware",
        "psr",
        "psr-7",
        "psr-11",
        "psr-15",
        "laminas",
        "mezzio"
    ],
    "license": "BSD-3-Clause",
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "beberlei/assert": "^2.9",
        "enqueue/enqueue": "^0.8.24",
        "enqueue/redis": "^0.8.23",
        "guzzlehttp/guzzle": "^6.3",
        "monolog/monolog": "^1.23",
        "phpseclib/phpseclib": "^2.0",
        "psr/log": "^1.0",
        "xtreamwayz/expressive-console": "1.0.x-dev",
        "xtreamwayz/expressive-messenger": "1.0.x-dev",
        "laminas/laminas-component-installer": "^2.1",
        "laminas/laminas-config-aggregator": "^1.0",
        "laminas/laminas-diactoros": "^1.7",
        "mezzio/mezzio": "^3.0",
        "mezzio/mezzio-fastroute": "^3.0",
        "mezzio/mezzio-helpers": "^5.0",
        "mezzio/mezzio-twigrenderer": "^2.0",
        "mezzio/mezzio-problem-details": "^1.0",
        "laminas/laminas-servicemanager": "^3.3",
        "laminas/laminas-stdlib": "^3.1",
        "laminas/laminas-dependency-plugin": "^1.0"
    },
    "require-dev": {
        "doctrine/coding-standard": "^4.0",
        "filp/whoops": "^2.1",
        "phpstan/phpstan": "^0.10",
        "phpunit/phpunit": "^7.0",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.0",
        "mezzio/mezzio-tooling": "^1.0",
        "laminas/laminas-development-mode": "^3.1"
    },
    "config": {
        "discard-changes": true,
        "sort-packages": true
    },
    "extra": {
        "zf": {
            "component-whitelist": [
                "xtreamwayz/expressive-console",
                "xtreamwayz/expressive-messenger",
                "mezzio/mezzio",
                "mezzio/mezzio-helpers",
                "mezzio/mezzio-router",
                "laminas/laminas-httphandlerrunner",
                "mezzio/mezzio-fastroute",
                "mezzio/mezzio-twigrenderer"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppTest\\": "test/"
        }
    },
    "scripts": {
        "analyze": "phpstan analyze",
        "check": [
            "@cs-check",
            "@test",
            "@analyze"
        ],
        "clear-config-cache": "php bin/clear-config-cache.php",
        "coverage": [
            "@test-coverage",
            "@test-infection"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "development-disable": "laminas-development-mode disable",
        "development-enable": "laminas-development-mode enable",
        "development-status": "laminas-development-mode status",
        "expressive": "expressive --ansi",
        "serve": "php -S 0.0.0.0:8080 -t public/",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --coverage-xml=data/coverage/coverage-xml --log-junit=data/coverage/phpunit.junit.xml --coverage-clover=data/coverage/clover.xml",
        "test-infection": "infection --threads=4 --coverage=data/coverage"
    },
    "support": {
        "issues": "https://github.com/laminas/laminas-bot/issues",
        "source": "https://github.com/laminas/laminas-bot",
        "rss": "https://github.com/laminas/laminas-bot/releases.atom"
    }
}
